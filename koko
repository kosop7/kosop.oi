    <!-- 엔딩 화면 -->
    <div id="ending-screen" class="screen">
        <div class="container flex flex-col items-center justify-center h-screen">
            <h1 class="title">패치 노트: 민족</h1>
            <p class="text-xl mb-8 text-center">"역사는 패치되지만, 사람들은 항상 자신만의 플레이 방식을 찾아냅니다."</p>
            <p class="text-lg mb-8 text-center">이 작품은 국가가 '업데이트'한 민족 정체성과 실제 민간의 적응 전략 사이의 간극을 탐구합니다.</p>
            <div class="pixel-button" onclick="showScreen('main-screen')">처음으로 돌아가기</div>
        </div>
    </div>

    <script>
        // 현재 완료한 버전 수
        let completedVersions = 0;
        let secretPattern = [];
        const correctPattern = ['v1', 'v3', 'v3', 'v7']; // 패턴은 v1→v3→v3→v7
        
        // 효과음
        const sounds = {
            select: new Audio(),
            version: new Audio(),
            feature: new Audio(),
            remove: new Audio(),
            secret: new Audio(),
        };
        
        // 화면 전환 함수
        function showScreen(screenId) {
            // 현재 활성화된 화면 비활성화
            document.querySelectorAll('.screen').forEach(screen => {
                screen.classList.remove('active-screen');
            });
            
            // 선택한 화면 활성화
            document.getElementById(screenId).classList.add('active-screen');
            
            // 선택 효과음 재생
            // sounds.select.play();
            
            // 모든 버전을 완료했고 엔딩을 보지 않았다면 엔딩 화면으로
            if (completedVersions >= 5 && screenId === 'main-screen') {
                document.getElementById('main-screen').classList.remove('active-screen');
                document.getElementById('ending-screen').classList.add('active-screen');
                completedVersions = 0; // 리셋
            }
        }
        
        // 버전 화면 보기
        function showVersion(version) {
            // 버전 선택 효과음 재생
            // sounds.version.play();
            
            if (version === 'v7') { // 비밀 버전
                if (isSecretUnlocked()) {
                    document.getElementById('version-select-screen').classList.remove('active-screen');
                    document.getElementById('secret-screen').classList.add('active-screen');
                    // 비밀 발견 효과음 재생
                    // sounds.secret.play();
                }
            } else {
                document.getElementById('version-select-screen').classList.remove('active-screen');
                document.getElementById(version + '-screen').classList.add('active-screen');
                
                // 이 버전을 처음 방문한다면 완료 카운트 증가
                if (!localStorage.getItem('visited_' + version)) {
                    localStorage.setItem('visited_' + version, 'true');
                    completedVersions++;
                    
                    // 모든 버전을 방문했다면 비밀 버전 잠금 해제
                    if (completedVersions >= 5) {
                        unlockSecret();
                    }
                }
                
                // 비밀 패턴 추적
                secretPattern.push(version);
                if (secretPattern.length > 4) {
                    secretPattern.shift(); // 가장 오래된 항목 제거
                }
                
                // 패턴이 맞는지 확인
                checkSecretPattern();
            }
        }
        
        // 비밀 패턴 확인
        function checkSecretPattern() {
            if (secretPattern.length === 4) {
                let patternMatches = true;
                for (let i = 0; i < 4; i++) {
                    if (secretPattern[i] !== correctPattern[i]) {
                        patternMatches = false;
                        break;
                    }
                }
                
                if (patternMatches) {
                    unlockSecret();
                }
            }
        }
        
        // 비밀 버전 잠금 해제
        function unlockSecret() {
            const secretVersion = document.getElementById('secret-version');
            secretVersion.classList.remove('locked');
            secretVersion.classList.add('bg-secret');
            secretVersion.textContent = '> [해킹된 버전] v?.??: 신조선족';
            secretVersion.onclick = function() { showVersion('v7'); };
            localStorage.setItem('secret_unlocked', 'true');
        }
        
        // 비밀 버전이 잠금 해제되었는지 확인
        function isSecretUnlocked() {
            return localStorage.getItem('secret_unlocked') === 'true';
        }
        
        // 페이지 로드 시 초기화
        window.onload = function() {
            // 방문한 버전 수 계산
            const visitedVersions = ['v1', 'v2', 'v3', 'v4', 'v5'].filter(v => 
                localStorage.getItem('visited_' + v) === 'true'
            );
            completedVersions = visitedVersions.length;
            
            // 비밀 버전 상태 확인
            if (isSecretUnlocked()) {
                unlockSecret();
            }
            
            // 프로그레스 바 애니메이션
            const progressBars = document.querySelectorAll('.progress-fill');
            progressBars.forEach(bar => {
                const width = bar.style.width;
                bar.style.width = '0';
                setTimeout(() => {
                    bar.style.width = width;
                }, 300);
            });
        };
    </script>
</body>
</html>
